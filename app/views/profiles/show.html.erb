<h1 class='center'><%= @user.username %></h1>
<div class='row'>
  <div class='col s12'>
    <div class='col s12 m4'>
      <h3>Spots</h3>
      <% @spots.each do |spot| %>
        <p><%= link_to spot.name, spot_path(spot) %></p>
      <% end %>
    </div>

    <div class='col s12 m4'>
      <h3>Liked Spots</h3>
      <% @likes.each do |like| %>
        <p><%= link_to like.spot.name, spot_path(like.spot) %></p>
      <% end %>
    </div>

    <div class='col s12 m4'>
      <h3>Comments</h3>
      <% @comments.each do |comment| %>
        <p><%= truncate(comment.body, length: 100) %></p>
      <% end %>
    </div>
  </div>
</div>
