<!-- Picture -->
<div class=''>
  <div id="spot-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner" role="listbox">
      <% @spot.spot_pictures.each_with_index do |p, i| %>
        <div class="item <%= i == 0 ? 'active' : '' %>">
          <img class='carousel-img' src="<%= p.picture.url(:medium) %>" alt="spot picture">
        </div>
      <% end %>
    </div>
    <a class="left carousel-control" href="#spot-carousel" role="button" data-slide="prev">
      <span class="icon-prev" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#spot-carousel" role="button" data-slide="next">
      <span class="icon-next" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>

  <div class='jumbotron'
    <div class='col-xs-6'>
      <div class='medium_show_picture' height='400px'><%= image_tag @spot.spot_pictures %></div>
      </div>
  </div>
</div>

<div class='col-xs-12'>
  <h3>Add Image</h3>
  <%= form_for @spot_picture do |f| %>
    <div class='field'>
      <%= f.file_field :picture %>
    </div>
    <div class='field'>
      <%= f.submit %>
    </div>
  <% end %>
</div>

<div class="col-xs-6">
  <!-- Like Tree -->
    <%= @spot.likes.count %>
    <%= link_to like_path(@spot) do %>
      <i class="fa fa-tree" aria-hidden="true"></i>
    <% end %>

  <!-- Post By: -->
  <p>Posted By: <%= link_to @spot.user.username, profile_path(@spot.user) %></p>

    <!-- Edit/Delete -->
    <%= link_to 'Edit', edit_spot_path(@spot) %>
    <%= link_to 'Delete', spot_path(@spot), method: :delete %>

  <!-- Spot Description -->
    <% if current_user %>
      <% if current_user.id == @spot.user_id || current_user.admin? %>
      <% end %>
    <% end %>
      <h1><%= @spot.name %></h1>
        <p><%= @spot.description %></p>
      <h4>Address</h4>
        <p><%= @spot.address.street %></p>
        <p><%= @spot.address.city %></p>
        <p><%= @spot.address.state %></p>
        <p><%= @spot.address.zip %></p>
</div>
      <div class='col-xs-offset-7'></div>
      <!-- Comments -->
      <h4>Comments</h4>
    <% if signed_in? %>
        <%= form_for [@spot, @comment] do |f| %>
        <%= f.text_area :body %>
        <br/>
        <br/>
        <!-- Submit Button -->
        <%= f.submit %>
    <% end %>
    <% else %>
      <small><%= link_to 'Log In To Comment', new_user_session_path %></small>
      <br/>
    <% end %>
      <!-- Commenting User -->
    <% @comments.each do |comment| %>
      <br/>
  <!-- Commenting User -->
      <h4><%= link_to comment.user.username, profile_path(comment.user.id) %></h4>
  <!-- Comment Body -->
      <div class='col-xs-offset-1'><small><p>--<%= comment.body %></p></small>
        <small><u><p><%= time_ago_in_words(comment.created_at) %> ago</p></u></small>
      </div>
    <% if current_user %>
      <% if current_user.id == comment.user_id %>
        <%= link_to 'Delete', delete_comment_path(@spot, comment), method: :delete %>
      <% end %>
    <% end %>
  <% end %>
