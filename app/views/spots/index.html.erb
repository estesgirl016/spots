<% @spots.each do |spot| %>

  <h3><%= link_to spot.name, spot_path(spot) %></h3>
  <div class='row' >
    <div class='col-md-10'><%= spot.description %></div>
    <div class='col-md-2'><%= spot.likes.count %>
      <%= link_to like_path(spot) do %>
        <i class="fa fa-tree" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
<% end %>
